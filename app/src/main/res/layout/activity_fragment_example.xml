<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentExampleActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btn_context_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click Here for Context Menu"/>
        <Button
            android:id="@+id/btn_popup_menu"
            android:layout_below="@id/btn_context_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click Here for Popup Menu"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frag1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <FrameLayout
        android:id="@+id/frag2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>